<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/tagIDET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tagIDTV"
        android:layout_alignBottom="@+id/tagIDTV"
        android:layout_alignLeft="@+id/fishNameET"
        android:ems="10" />

    <EditText
        android:id="@+id/sizeET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/tagIDET"
        android:ems="10" />

    <EditText
        android:id="@+id/baitUsedET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/sizeET"
        android:ems="10" />

    <EditText
        android:id="@+id/riggingET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/baitUsedET"
        android:ems="10" />

    <Button
        android:id="@+id/insertButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Submit" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/insertButton"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="174dp"
        android:text="Bait Used:" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/baitUsedET"
        android:layout_marginTop="34dp"
        android:text="Rigging Used:" />

    <EditText
        android:id="@+id/fishNameET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fishNameEdit"
        android:layout_alignParentRight="true"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/fishNameEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tagIDET"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="15dp"
        android:text="Fish Name:" />

    <TextView
        android:id="@+id/tagIDTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sizeET"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="19dp"
        android:text="Tag ID:" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/baitUsedET"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="17dp"
        android:text="Size:" />

    <TextView
        android:id="@+id/insertTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/insertButton"
        android:text="Tag a Fish"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/riggingET"
        android:layout_marginTop="34dp"
        android:text="Weather:" />

    <EditText
        android:id="@+id/weatherET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignParentRight="true"
        android:ems="10" />

</RelativeLayout>